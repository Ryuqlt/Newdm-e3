#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void greet(){
 char name[50];

  printf("What is your name?\n");
  scanf("%s",name);

  printf("> %s\n",name);
  printf("Hello, %s!\n",name);
}


int main(){
  int x,y;
  int Total;

  srand(time(NULL));
  x=(rand() %6 +1);
  y=(rand() %6 +1);

  Total  = x+y;
  greet();

  printf("Rolling dice...\n");
  printf("Die1: %d\n",x);
  printf("Die2: %d\n",y);

  printf("Total value: %d\n",Total);
 if(Total>=8){
    printf("You won\n");
  }
  else{
    printf("You lost\n");
  }

return 0;
}
